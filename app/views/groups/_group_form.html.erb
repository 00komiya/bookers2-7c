<%= form_with model:group do |f| %>
  <div class="form-group">
    <%= f.label :名前 %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :紹介文 %>
    <%= f.text_area :introduction, class: 'form-control group_introduction' %>
  </div>
  <div class="form_group">
    <%= f.label :画像 %>
    <%= f.file_field :group_image,accept: "image/*" %>
  </div>
  <div class="form-group">
    <% if f.object.new_record? %>
      <%= f.submit "Create Group", class: 'btn btn-success mt-3' %>
    <% else %>
      <%= f.submit "Update Group", class: "btn btn-secondary mt-3" %>
    <% end %>
  </div>
<% end %>
